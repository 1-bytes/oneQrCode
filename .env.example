# HTTP 服务配置
HTTP_LISTEN_HOST=127.0.0.1      # 地址
HTTP_LISTEN_PORT=8080           # 端口
HTTP_READ_TIMEOUT=5             # 读取包括请求体的整个请求的最大时长
HTTP_READ_HEADER_TIMEOUT=2      # 允许读请求头的最大时长
HTTP_WRITE_TIMEOUT=5            # 写响应允许的最大时长
HTTP_IDLE_TIMEOUT=30            # 当开启了保持活动状态（keep-alive）时允许的最大空闲时间

# 数据库配置
DB_CONNECTION=mysql                 # 数据库类型
DB_HOST=127.0.0.1                   # 数据库地址
DB_PORT=3306                        # 数据库端口
DB_USERNAME=root                    # 数据库账号
DB_PASSWORD=root                    # 数据库密码
DB_DATABASE=db_one_qr_code          # 使用的数据库

# 日志存放目录
LOGGER_PATH=logs

